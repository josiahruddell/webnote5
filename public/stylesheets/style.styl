*
  margin 0
  padding 0
  color #555

input:focus
  outline none

[contenteditable="true"]:focus
  outline none

html
  background #999 url(/images/backgrounds/Pinstripe.jpg) 0 0
  background-attachment fixed

body
  font 77% "Lucida Grande", "Trebuchet MS", Georgia, serif
  overflow-x hidden
  
h1
  color #4c7fa8
  margin 10px 0
  clear both


h2
  display inline
  margin 0
  padding 0


p
  margin 10px 0

h1 sup,sub
  font-size 9px
  font-weight normal

// # CONTAINER STYLES

#nav
  width 180px
  position fixed
  height: 100%
  background #dee4ea
  //background #555 //#E5E5E5
  //background -webkit-gradient(linear, left top, right top, color-stop(0%,#555), color-stop(100%,#666))//#e7edf0
  //background -moz-linear-gradient(left, #555 0%, #666 100%)
  top 46px
  left 0
  z-index 98
  border 1px solid #b4b4b4
  border-left none



#main
  left 180px
  position relative
  top 26px
  background Transparent
  z-index 50

#bar
  position relative
  opacity .85
  z-index 99
  background #E5E5E5
  background -moz-linear-gradient(top, #E5E5E5 0%, #C4C4C4 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#E5E5E5), color-stop(100%,#C4C4C4))
  text-shadow: 0 1px 0 #fff;
  //filter progid:DXImageTransform.Microsoft.gradient(startColorstr='#E5E5E5', endColorstr='#C4C4C4',GradientType=0)
  border-bottom 1px solid #757575
  position fixed
  height 25px
  width 100%
  top 0
  -webkit-box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)
  -moz-box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)

// # CONTAINER ELEMENTS

#nav *
  color #222

#nav ul > li a
  color #738298
  font-family Arial
  font-weight bold
  padding-left 12px
  background url(/images/arrow-left.jpg) 0 1px no-repeat


#bar li
  float left
  letter-spacing 1px

#bar li a
  padding 5px 10px
  display block
  cursor default
  color #111
  font-size 13px

section .contents
  padding 0 15px 15px

section#bar .contents
  padding 0px 15px 0px 15px

section#bar .icon
  float right
  width 25px
  height 25px


section#nav .contents
  padding 5px 10px

section *
  list-style none
  text-decoration none

// # CLASSES

.boxshadow
  -webkit-box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)
  -moz-box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3)

.rounded
  border-radius 3px


// # MENU STYLE

.icon.search
  padding-bottom 1px
  background url('/images/search-hover.png') 6px 6px no-repeat
  background-size 60%
  cursor default

.icon.search.active
  background-image url('/images/search.png')

#bar a.active
  background #0066ff
  background -moz-linear-gradient(top, #6ca6d8 0%, #1e6cb4 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#6ca6d8), color-stop(100%,#1e6cb4))
  color #fff
  text-shadow: 0 1px 0 #333;

#search
  padding 5px 5px 5px 15px
  position fixed
  right 15px
  top 25px
  background #0066ff
  color #fff
  font-weight bold
  z-index 1000

#search input
  margin-left 20px
  width 200px
  padding 2px 7px
  color #111
  font-size  12px
  border-radius 10px
  border none

.menu-list
  z-index 98
  opacity .95
  width 200px
  position fixed
  background #fff
  border 1px solid #CCC
  border-top none
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  padding 5px 0
  -webkit-box-shadow 0px 0px 20px rgba(0, 0, 0, 0.3)
  -moz-box-shadow 0px 0px 20px rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 20px rgba(0, 0, 0, 0.3)
  //box-shadow 0px 6px 9px 3px #333;

.menu-list li
  list-style none
  padding 3px 5px
  font-size 105%

.menu-list li.hr, .menu-list li.hr:hover
  height 1px
  padding 0
  background #ccc
  margin 5px 1px

.menu-list li:hover
  background #0066ff
  background -moz-linear-gradient(top, #6ca6d8 0%, #1e6cb4 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#6ca6d8), color-stop(100%,#1e6cb4))

.menu-list li:hover a
  color #fff
  text-shadow #333 0 1px 0

.menu-list li a
  display block
  padding 0 10px
  color #111
  text-decoration none

// PAGE STYLES
.page
  margin 0 15px 15px
  font-size: 107%

.date 
  color #b0b0b0
  position absolute
  top 15px
  right 15px
  font-style italic
.time 
  color #b0b0b0
  position absolute
  top 30px
  right 15px
  font-style italic

.bold
  font-weight bold

.oneformat
  z-index 1050
  border 1px solid #E1E1E1
  border-radius 5px
  background-color #fff
  -webkit-box-shadow 0px 0px 8px rgba(0, 0, 0, 0.3)
  -moz-box-shadow 0px 0px 8px rgba(0, 0, 0, 0.3)
  box-shadow 0px 0px 8px rgba(0, 0, 0, 0.3)
  color #111

.oneformat ul li
  float left
  list-style none
  width 15px
  height 15px
  text-align center
  padding 2px
  border-left 1px solid #E1E1E1
  cursor default !important

.page ::selection, .page ::-moz-selection
  background #a8d1ff
  color #222

